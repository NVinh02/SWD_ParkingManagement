@page
@model ParkingManagementWebApp.Pages.Managers.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Manager</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Manager.Password)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Manager.Password)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Manager.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Manager.Status)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Manager.Type)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Manager.Type)
        </dd>
    </dl>
</div>
<div>
    @if (@Model.Status == true)
    {
        <a asp-page="./Delete" asp-route-id="@Model.Manager.Username">Disable</a>
        <a class="text-black-50">|</a>
        <a asp-page="./Index">Back to List</a>
    }
    @if (@Model.Status == false)
    {
        <a asp-page="./Delete" asp-route-id="@Model.Manager.Username">Enable</a>
        <a class="text-black-50">|</a>
        <a asp-page="./Index">Back to List</a>
    }
</div>
