@page
@model ParkingManagementWebApp.Pages.Accounts.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>Register</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RegistrationForm.UserName" class="control-label"></label>
                <input asp-for="RegistrationForm.UserName" class="form-control" />
                <span asp-validation-for="RegistrationForm.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegistrationForm.Fullname" class="control-label"></label>
                <input asp-for="RegistrationForm.Fullname" class="form-control" />
                <span asp-validation-for="RegistrationForm.Fullname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegistrationForm.Password" class="control-label"></label>
                <input asp-for="RegistrationForm.Password" class="form-control" />
                <span asp-validation-for="RegistrationForm.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegistrationForm.ConfirmPassword" class="control-label"></label>
                <input asp-for="RegistrationForm.ConfirmPassword" class="form-control" />
                <span asp-validation-for="RegistrationForm.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegistrationForm.IsResident" class="control-label"></label>
                <input asp-for="RegistrationForm.IsResident" class="form-control" />
                <span asp-validation-for="RegistrationForm.IsResident" class="text-danger"></span>
            </div>
            <p class="text-danger">@Model.Error</p>
            <div class="form-group">
                <input type="submit" value="Register" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>